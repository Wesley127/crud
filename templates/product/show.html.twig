{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ product.code }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ product.prijs }}</td>
            </tr>
            <tr>
                <th>Omschrijving</th>
                <td>{{ product.omschrijving }}</td>
            </tr>
            <tr>
                <th>Creatietijd</th>
                <td>{{ product.creatietijd ? product.creatietijd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Changetijd</th>
                <td>{{ product.changetijd ? product.changetijd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

     {% if is_granted('ROLE_ADMIN')%}
                



    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}

     {% endif %}
{% endblock %}
